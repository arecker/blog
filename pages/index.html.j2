<div class="row">
  {% set latest = entries[0] %}
  {% if latest %}
  <div class="column">
    <h2>Latest Entry</h2>
    <h3>{{ latest.title }}</h3>
    <a href="{{ latest.href }}">{{ latest.description }}</a>
    {% if latest.banner %}
    <figure>
      <a href="{{ latest.href }}">
        <img
          alt="{{ latest.description }}"
          src="./images/{{ latest.banner }}"
          />
      </a>
    </figure>
    {% endif %}
  </div>
  {% endif %}
</div>

<div class="row">
  {% set this_date = on_this_date(site.timestamp, entries) %}
  {% if this_date %}
  <div class="column">
    <h2>On This Day</h2>
    <h3>{{ this_date.title }}</h3>
    <a href="./{{ this_date.filename }}">{{ this_date.description }}</a>
    {% if this_date.banner %}
    <figure class="small">
      <a href="./{{ this_date.filename }}">
        <img alt="{{ this_date.description }}" src="./images/{{ this_date.banner }}" />
      </a>
    </figure>
    {% endif %}
  </div>
  {% endif %}
</div>

<h2>Pages</h2>

<table>
  {% for page in pages %}
  {% if page.filename != 'index.html' %}
  <tr>
    <td>
      <a href="./{{ page.filename }}">{{ page.filename }}</a>
    </td>
    <td>{{ page.description }}</td>
  </tr>
  {% endif %}
  {% endfor %}
</table>
