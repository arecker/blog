{% set latest = entries[0] %}
{% if latest %}
  <h2>Latest Entry</h2>
  {% if latest.banner %}
    <figure>
      <a href="{{ latest.href }}">
        <img
          alt="{{ latest.description }}"
          src="./images/banners/{{ latest.banner }}"
        />
      </a>
      <figcaption>
        <p>{{ latest.description }}</p>
      </figcaption>
    </figure>
  {% else %}
    <a href="{{ latest.href }}">
      <p>{{ latest.description }}</p>
    </a>
  {% endif %}
{% endif %}

{% set this_date = on_this_date(site.timestamp, entries) %}
{% if this_date %}
  <h2>On This Day</h2>
  <h3>{{ this_date.title }}</h3>
  <a href="./{{ this_date.filename }}">{{ this_date.description }}</a>
{% endif %}

{% set random_photo = images | random %}
{% if random_photo %}
  <h2>Random Photo</h2>
  <a href="{{ random_photo.href }}">{{ random_photo.filename }}</a>
{% endif %}

{% set random_napkin = find_random_napkin(images) %}
{% if random_napkin %}
  <h2>Random Napkin Art</h2>
  <a href="{{ random_napkin.href }}">{{ random_napkin.filename }}</a>
{% endif %}

{% if entries %}
<h2>All Entries</h2>
<table>
  {% for entry in entries %}
    <tr>
      <td>
        <a href="./{{ entry.filename }}">{{ entry.filename }}</a>
      </td>
      <td>{{ entry.description }}</td>
    </tr>
  {% endfor %}
</table>
{% endif %}
