<!-- meta:title Homework -->
<!-- meta:description old homework assignments republished -->

{% set entries = find_homework(entries) %}
{% set random = entries | random %}

<figure>
  <a href="./{{ random.filename }}">
    <img alt="{{ random.description }}" src="./images/{{ random.banner }}" />
  </a>
  <figcaption>
    From <a href="./{{ random.filename }}">{{ random.description }}</a>
  </figcaption>
</figure>

<hr/>

<table>
  {% for entry in entries %}
    <tr>
      <td>
        <a href="./{{ entry.filename }}">{{ entry.filename }}</a>
      </td>
      <td>{{ entry.description }}</td>
    </tr>
  {% endfor %}
</table>
