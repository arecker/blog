<!-- meta:title Entries -->
<!-- meta:description complete archive of journal entries -->

{% set random = find_random_entry_with_banner(entries) %}

<figure>
  <a href="./{{ random.filename }}">
    <img alt="{{ random.description }}" src="./images/banners/{{ random.banner }}" />
  </a>
  <figcaption>
    From <a href="./{{ random.filename }}">{{ random.description }}</a>
  </figcaption>
</figure>

<hr/>

<table>
  {% for entry in entries %}
    <tr>
      <td>
        <a href="./{{ entry.filename }}">{{ entry.filename }}</a>
      </td>
      <td>{{ entry.description }}</td>
    </tr>
  {% endfor %}
</table>
