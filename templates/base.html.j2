{%- set title = page.title or site.title %}
{%- set description = page.description or site.description %}
<!doctype html>
<html>
  <head>
    <title>{{ title }}</title>

    <!-- Page Assets -->
    <link href="./favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="./assets/site.css" rel="stylesheet" />

    <!-- Page Metadata -->
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="{{ title }}" name="twitter:title" />
    <meta content="{{ description }}" name="twitter:description" />
    <meta content="{{ site.protocol }}://{{ site.domain }}/{{ page.filename }}" name="og:url" />
    <meta content="article" property="og:type" />
    <meta content="{{ title }}" property="og:title" />
    <meta content="{{ description }}" property="og:description" />
  </head>
  <body>

    <article id="top">

      <!-- Page Header -->
      <header>
        <h1>{{ title }}</h1>
        <p>{{ description }}</p>
      </header>

      <hr />

      <!-- Page Breadcrumbs -->
      <nav>
        <a href="./index.html">index.html</a>
        {%- if page.filename != "index.html" %}
          <span>/ {{ page.filename }}</span>
        {%- endif %}
      </nav>

      <hr />

      {%- if page.banner %}
      <!-- Page Banner -->
      <figure>
        <a href="./images/banners/{{ page.banner }}">
          <img alt="page banner" src="./images/banners/{{ page.banner }}" />
        </a>
      </figure>
      {%- endif %}

{{ content }}

      <!-- Pagination/Navigation -->
      <nav>
        <a href="#top">↑ back to top</a>
      {%- if page.next %}
        <a href="./{{ page.next }}">⟵ {{ page.next }}</a>
      {%- endif %}
      {%- if page.previous %}
        <a href="./{{ page.previous }}">{{ page.previous }} ⟶</a>
      {%- endif %}
      </nav>

      <hr />

      <!-- Page Footer -->
      <footer>
        <p>
          Built with <a href="./api/src.html">blog</a>
          and python {{ site.python_version }} (<a href="./build.txt">build.txt</a>)
        </p>
        <p>© {{ site.timestamp.year }} {{ site.author }}</p>
      </footer>

    </article>
  </body>
</html>
