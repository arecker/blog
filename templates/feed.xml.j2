<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <subtitle>{{ site.description }}</subtitle>
  <author>
    <name>{{ site.author }}</name>
    <email>{{ site.email }}</email>
  </author>
  <updated>{{ items[0].timestamp }}</updated>
  <id>{{ site.url }}/{{ filename }}</id>
  <link href="{{ site.url }}/{{ filename }}" rel="self" type="application/atom+xml" />
  <link href="{{ site.url }}" rel="alternate" type="text/html" />
  {%- for item in items %}
  <entry>
    <title>{{ item.title }}</title>
    <published>{{ item.timestamp }}</published>
    <updated>{{ item.timestamp }}</updated>
    <author>
      <name>{{ site.author }}</name>
      <email>{{ site.email }}</email>
    </author>
    <id>{{ site.url }}/{{ item.path }}</id>
    <link href="{{ site.url }}/{{ item.path }}" />
    {%- if item.image %}
    <media:thumbnail url="{{ site.url }}/{{ item.image }}" xmlns:media="http://search.yahoo.com/mrss/" />
    <media:content medium="image" url="{{ site.url }}/{{ item.image }}" xmlns:media="http://search.yahoo.com/mrss/" />
    {%- endif %}
  </entry>
  {%- endfor %}
</feed>
