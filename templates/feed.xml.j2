<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <subtitle>{{ site.description }}</subtitle>
  <author>
    <name>{{ site.author }}</name>
    <email>{{ site.email }}</email>
  </author>
  <updated>{{ items[0].date_slug }}T00:00:00+00:00</updated>
  <id>{{ site.protocol }}://{{ site.domain }}/feed.xml</id>
  <link href="{{ site.protocol }}://{{ site.domain }}/feed.xml" rel="self" type="application/atom+xml" />
  <link href="{{ site.protocol }}://{{ site.domain }}" rel="alternate" type="text/html" />
  {%- for item in items %}
  <entry>
    <title>{{ item.title }}</title>
    <published>{{ item.date_slug }}T00:00:00+00:00</published>
    <updated>{{ item.date_slug }}T00:00:00+00:00</updated>
    <author>
      <name>{{ site.author }}</name>
      <email>{{ site.email }}</email>
    </author>
    <id>{{ item.link }}</id>
    <link href="{{ item.link }}" />
    {%- if item.image %}
    <media:thumbnail url="{{ item.image }}" xmlns:media="http://search.yahoo.com/mrss/" />
    <media:content medium="image" url="{{ item.image }}" xmlns:media="http://search.yahoo.com/mrss/" />
    {%-  endif %}
  </entry>
  {%- endfor %}
</feed>
